<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7b148"
    tools:context="com.codeclan.housework4.MainActivity">

    <com.codeclan.housework4.CustomButton
        android:id="@+id/today_button"
        android:text="@string/today_button"
        android:background="#fd6161"
        android:textSize="34sp"
        android:layout_gravity="center"
        android:onClick="onTodayButtonClicked"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/add_task_button"
        android:text="@string/add_task_button"
        android:background="#82b1ff"
        android:textSize="34sp"
        android:layout_gravity="center"
        android:onClick="onAddTaskButtonClicked"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <com.codeclan.housework4.CustomButton
        android:background="@color/day_button"
    android:id="@+id/monday_button"
    android:text="@string/monday_button"
    android:textSize="34sp"
    android:layout_gravity="center"
    android:onClick="onMondayButtonClicked"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/tuesday_button"
        android:text="@string/tuesday_button"
        android:textSize="34sp"
        android:background="@color/day_button"
        android:layout_gravity="center"
        android:onClick="onTuesdayButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/wednesday_button"
        android:text="@string/wednesday_button"
        android:textSize="34sp"
        android:background="@color/day_button"
        android:onClick="onWednesdayButtonClicked"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/thursday_button"
        android:text="@string/thursday_button"
        android:textSize="34sp"
        android:background="@color/day_button"
        android:layout_gravity="center"
        android:onClick="onThursdayButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/friday_button"
        android:text="@string/friday_button"
        android:textSize="34sp"
        android:background="@color/day_button"
        android:layout_gravity="center"
        android:onClick="onFridayButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/saturday_button"
        android:text="@string/saturday_button"
        android:textSize="34sp"
        android:background="@color/day_button"
        android:layout_gravity="center"
        android:onClick="onSaturdayButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.codeclan.housework4.CustomButton
        android:id="@+id/sunday_button"
        android:text="@string/sunday_button"
        android:textSize="34sp"
        android:background="@color/day_button"
        android:layout_gravity="center"
        android:onClick="onSundayButtonClicked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
